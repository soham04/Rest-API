<% if(description.length> 20) {%>
    <p id="<%= id %>-description">
        <%= description.slice(0,20) %><span id="dots">...</span><span id="more">
                <%= description.slice(20) %>
            </span>
    </p>

    <button onclick="readMore()" id="<%= id %>-readMore">Read more</button>

    <% } else { %>

        <p id="<%= id %>-description">
            <%= description %>
        </p>

        <% } %>